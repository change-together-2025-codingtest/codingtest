def solution(numbers, target):
    # 최종 방법의 수를 저장할 변수
    answer = [0]
    
    # DFS함수 정의
    # (index: 현재 처리 중인 숫자의 인덱스, current_sum: 현재까지의 누적 합)
    def dfs(index, current_sum):
        
        #  모든 숫자를 다 사용했을 때
        if index == len(numbers):
            # 현재 누적 합이 타겟 넘버와 같다면
            if current_sum == target:
                # 방법의 수 1 증가
                answer[0] += 1
            # 같지 않다면 아무것도 하지 않고 함수 종료
            return
        
        # 재귀 호출
        # 현재 숫자를 더하는 경우
        dfs(index + 1, current_sum + numbers[index])
        
        # 현재 숫자를 빼는 경우
        dfs(index + 1, current_sum - numbers[index])
    
    #  DFS 시작
    dfs(0, 0)
    
    # 최종 방법의 수 반환
    return answer[0]